<!-- To make a new post -->

<%-include("partials/header")-%>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="formTitle">Title</label>
        <input class="form-control" type="text" name="postTitle" id="postTitle" value="<%=titleValue%>">
    </div>
    <div class="form-group">
        <label for="formPost">Post</label>
        <textarea class="form-control" id="formPost" name="postBody" rows="10" cols="30"><%=bodyValue%></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>
<%-include("partials/footer")-%>